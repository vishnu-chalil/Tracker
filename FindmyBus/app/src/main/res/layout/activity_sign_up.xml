<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishnu.findmybus.SignUp">


    <EditText
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:backgroundTint="#B7B7B7"
        android:layout_marginTop="15dp"
        android:hint="EMAIL"
        android:inputType="textWebEmailAddress"
        android:textSize="12dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView5"
        android:backgroundTint="#B7B7B7"
        android:layout_marginTop="15dp"
        android:hint="STUDENT ID"
        android:inputType="none"
        android:textSize="12dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp"
        android:backgroundTint="#B7B7B7"
        android:hint="PASSWORD"
        android:layout_marginBottom="20dp"
        android:inputType="numberPassword|textPassword"
        android:textSize="12dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/search_rect"
        android:text="Register"

        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:backgroundTint="#B7B7B7"
        android:layout_marginTop="15dp"
        android:hint="USERNAME"
        android:textSize="12dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/tv"
        android:layout_marginTop="12dp"
        android:hint="NAME"
        android:backgroundTint="#B7B7B7"
        android:inputType="text"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv"
        android:layout_marginBottom="21dp"
        android:text="ALREADY HAVE AN ACCOUNT ?"
        android:textColor="#8E8E8E"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="#444444"
        android:textSize="12dp"
        android:textStyle="bold" />
</RelativeLayout>
